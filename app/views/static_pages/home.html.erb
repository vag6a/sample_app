<%= provide(:title, 'Home') %>

<% if signed_in? %>
    <div class="row">
        <aside class="span4">
            <section>
                <%= render 'shared/user_info'%>
            </section>
            <section>
                <%= render 'shared/microposts_form'%>
            </section>
        </aside>
        <div class="span8">
            <h3>Micropost feed</h3>
            <%#= render 'shared/feed' %>
        </div>
    </div>
<% else %>
    <div class="center hero-unit">
    <h1>Welcome to Sample App</h1>
    <p>
        This is home page for the
        <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
        sample application.
    </p>

    <%= link_to "Sign up now!", '/signup', class: "btn btn-lg btn-primary" %>
    </div>

    <%= link_to image_tag("ruby.png", alt: "Rails logo"), 'http://rubyonrails.org/' %>
<% end %>
